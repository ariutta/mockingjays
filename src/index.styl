$background-color = #33455F
$primary = #20324F
$primary-dark = #0F2039
$primary-light = #495C77
$primary-lightest = #6B7B91

$secondary = #658340
$secondary-light = #85A45F
$secondary-lightest = #AFC98F
$secondary-dark = #AFC98F
$secondary-darkest = #324F0F

$text-color-dark = #555555
$content-width = 900px

body
  background-color $background-color
  background-image url('dist/images/escheresque_ste.png')
  background-attachment fixed
  color white
  font-size 18px
  line-height 24px
  font-family 'Lato', sans-serif
  margin 0

  a
    color white
    font-weight bolder
    text-decoration none

  p
    font-weight 100
    line-height 2rem

  pre
    background-color #222
    font-size 1rem
    font-family 'Roboto Mono'
    font-weight 100
    border solid 1px #000
    border-radius 10px
    padding .25rem 1rem

  .content
    box-sizing border-box
    margin 0 auto
    max-width $content-width
    padding 1rem
    width 100%

  .light-section
    background-color white
    box-sizing border-box
    color $text-color-dark
    width 100%

    a
      color $text-color-dark
    
    p
      font-weight 400

  .planned
    color #AAA
