$primary-dark = #0F2039
$secondary-darkest = #324F0F
$content-width = 900px
.footer
  ul
    list-style none
    margin 0 auto
    max-width $content-width
    padding 0
    li
      display flex
      flex-direction row
      margin 0.5rem 0
      img
        height 1rem
        margin-right .5rem
        vertical-align middle
      a
        text-decoration none
        color $secondary-darkest
